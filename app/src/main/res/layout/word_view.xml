<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.WordActivity"
    android:id="@+id/word_layout">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:id="@+id/LinearLayoutWordDetailAndImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dictionary_title"
                android:id="@+id/textViewDictionary"
                android:layout_below="@+id/tool_bar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginStart="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginEnd="@dimen/edit_text_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewDictionary"
                android:layout_below="@+id/textViewDictionary"
                android:inputType="textCapSentences|text"
                android:layout_alignLeft="@+id/textViewDictionary"
                android:layout_alignStart="@+id/textViewDictionary"
                android:layout_alignRight="@+id/textViewDictionary"
                android:layout_alignEnd="@+id/textViewDictionary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/headword"
                android:id="@+id/textHeadword"
                android:layout_below="@+id/TextViewDictionary"
                android:layout_alignLeft="@+id/TextViewDictionary"
                android:layout_alignStart="@+id/TextViewDictionary"
                android:layout_alignRight="@+id/TextViewDictionary"
                android:layout_alignEnd="@+id/TextViewDictionary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewHeadword"
                android:inputType="textCapSentences|text"
                android:layout_below="@+id/textHeadword"
                android:layout_alignLeft="@+id/textHeadword"
                android:layout_alignStart="@+id/textHeadword"
                android:layout_alignRight="@+id/textHeadword"
                android:layout_alignEnd="@+id/textHeadword"
                android:imeOptions="flagNoExtractUi"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="fill_parent"
            android:layout_weight="2" android:orientation="vertical">
            <!-- TODO add an image -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66880055"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutTranslations"
        android:layout_below="@+id/LinearLayoutWordDetailAndImage"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignLeft="@+id/LinearLayoutWordDetailAndImage"
        android:layout_alignRight="@+id/LinearLayoutWordDetailAndImage"
        android:layout_alignStart="@+id/LinearLayoutWordDetailAndImage"
        android:layout_alignEnd="@+id/LinearLayoutWordDetailAndImage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/translation"
            android:id="@+id/textViewTranslation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewTranslation1"
            android:layout_below="@+id/textViewTranslation"
            android:inputType="textCapSentences|text"
            android:layout_alignLeft="@+id/textViewTranslation"
            android:layout_alignStart="@+id/textViewTranslation"
            android:layout_alignRight="@+id/textViewTranslation"
            android:layout_alignEnd="@+id/textViewTranslation"
            android:imeOptions="flagNoExtractUi"
            android:hint="@string/translation_children"
            android:visibility="visible" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutTranslations"
        android:id="@+id/layoutAddButton"
        android:layout_alignLeft="@+id/LinearLayoutWordDetailAndImage"
        android:layout_alignStart="@+id/LinearLayoutWordDetailAndImage"
        android:layout_alignRight="@+id/LinearLayoutWordDetailAndImage"
        android:layout_alignEnd="@+id/LinearLayoutWordDetailAndImage">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <requestFocus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/remove_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_white_24"
            app:borderWidth="0dp"
            app:fabSize="normal"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:layout_marginRight="15dp" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24dp"
            app:borderWidth="0dp"
            app:fabSize="normal"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:layout_marginRight="15dp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/note"
        android:id="@+id/textViewNote"
        android:layout_below="@+id/layoutAddButton"
        android:layout_alignLeft="@+id/layoutAddButton"
        android:layout_alignStart="@+id/layoutAddButton"
        android:layout_alignRight="@+id/layoutAddButton"
        android:layout_alignEnd="@+id/layoutAddButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewNote"
        android:layout_below="@+id/textViewNote"
        android:inputType="textCapSentences|textMultiLine"
        android:layout_alignLeft="@+id/textViewNote"
        android:layout_alignStart="@+id/textViewNote"
        android:layout_alignRight="@+id/textViewNote"
        android:layout_alignEnd="@+id/textViewNote"
        android:imeOptions="flagNoExtractUi"/>

</RelativeLayout>