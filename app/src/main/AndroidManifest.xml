<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.csis.dicosaure.Controllers" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="ie.csis.dicosaure.Controllers.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name="ie.csis.dicosaure.Controllers.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ie.csis.dicosaure.Controllers.activities.dictionary.ListWordsActivity"
            android:label="@string/list_words_activity"
            android:launchMode="singleTop"
            android:parentActivityName="ie.csis.dicosaure.Controllers.activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.csis.dicosaure.Controllers.activities.MainActivity" />
        </activity>

        <activity
            android:name="ie.csis.dicosaure.Controllers.AdvancedSearchResultActivity"
            android:label="@string/title_activity_advanced_search_result"
            android:parentActivityName="ie.csis.dicosaure.Controllers.activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.csis.dicosaure.Controllers.activities.MainActivity" />
        </activity>

        <activity
            android:name="ie.csis.dicosaure.Controllers.CSVExportKot"
            android:label="@string/title_activity_csvexport"
            android:parentActivityName="ie.csis.dicosaure.Controllers.activities.dictionary.ListWordsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.csis.dicosaure.Controllers.activities.dictionary.ListWordsActivity" />
        </activity>

        <!-- external libraries -->
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />
        <activity
            android:name="ie.csis.dicosaure.Controllers.activities.language.SetLanguageKot"
            android:label="@string/title_activity_language"
            android:parentActivityName="ie.csis.dicosaure.Controllers.activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.csis.dicosaure.Controllers.activities.MainActivity" />
        </activity>
        <activity
            android:name="ie.csis.dicosaure.Controllers.activities.about.AboutActivityKot"
            android:label="@string/about"
            android:parentActivityName="ie.csis.dicosaure.Controllers.activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.csis.dicosaure.Controllers.activities.MainActivity" />
        </activity>

        <activity
            android:name="ie.csis.dicosaure.Controllers.WordViewEdit"
            android:label="Word View"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="ie.csis.dicosaure.Controllers.WordView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.csis.dicosaure.Controllers.WordView" />
        </activity>

        <activity
            android:name="ie.csis.dicosaure.Controllers.WordView"
            android:label="Word View"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="ie.csis.dicosaure.Controllers.WordView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.csis.dicosaure.Controllers.WordView" />
        </activity>

    </application>

</manifest>
