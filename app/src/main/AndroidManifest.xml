<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antoine_charlotte_romain.dictionary" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Controllers.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.activities.MainActivityKot"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.ListWordsActivity"
            android:label="@string/list_words_activity"
            android:launchMode="singleTop"
            android:parentActivityName=".Controllers.activities.MainActivityKot" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.activities.MainActivityKot" />
        </activity>
        <activity
            android:name=".Controllers.activities.dictionary.ListWordsActivityKot"
            android:label="@string/list_words_activity"
            android:launchMode="singleTop"
            android:parentActivityName=".Controllers.activities.MainActivityKot" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.activities.MainActivityKot" />
        </activity>
        <activity
            android:name=".Controllers.WordActivityKot"
            android:label="@string/details"
            android:parentActivityName=".Controllers.ListWordsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.ListWordsActivity" />
        </activity>
        <activity
            android:name=".Controllers.AdvancedSearchResultActivityKot"
            android:label="@string/title_activity_advanced_search_result"
            android:parentActivityName=".Controllers.activities.MainActivityKot" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.activities.MainActivityKot" />
        </activity>
        <activity
            android:name=".Controllers.CSVExportActivity"
            android:label="@string/title_activity_csvexport"
            android:parentActivityName=".Controllers.ListWordsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.ListWordsActivity" />
        </activity>

        <!-- external libraries -->
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />
        <activity
            android:name=".Controllers.activities.language.SetLanguageKot"
            android:label="@string/title_activity_language"
            android:parentActivityName=".Controllers.activities.MainActivityKot" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.activities.MainActivityKot" />
        </activity>
        <activity
            android:name=".Controllers.activities.about.AboutActivityKot"
            android:label="@string/about"
            android:parentActivityName=".Controllers.activities.MainActivityKot" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.activities.MainActivityKot" />
        </activity>

    </application>

</manifest>
